{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build Project (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-g",
                "${fileDirname}\\main.cpp",
                "${fileDirname}\\universalFunction\\helperFunctions.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "..\\json\\single_include",
                "-I",
                "${fileDirname}\\universalFunction"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}