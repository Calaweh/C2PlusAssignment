{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-std=c++20",
                "-g",
                "-Wall",
                "-Wextra",
                "${workspaceFolder}/Assignment/main.cpp",
                "${workspaceFolder}/Assignment/ui/screen_controller.cpp",
                "${workspaceFolder}/Assignment/ui/login_page.cpp",
                "${workspaceFolder}/Assignment/ui/customer_page.cpp",
                "${workspaceFolder}/Assignment/ui/staff_page.cpp",
                "${workspaceFolder}/Assignment/ui/vendor_page.cpp",
                "${workspaceFolder}/Assignment/universalFunction/helperFunctions.cpp",
                "${workspaceFolder}/Assignment/entity/event.cpp",
                "-o",
                "${workspaceFolder}/Assignment/main.exe",
                "-IAssignment/ui",
                "-IAssignment/entityManager",
                "-IAssignment/entity",
                "-IAssignment/universalFunction",
                "-IAssignment/json/single_include/nlohmann",
                "-IAssignment/data"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run C++ Program",
            "type": "shell",
            "command": "${workspaceFolder}/Assignment/main.exe",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}/Assignment"
            },
            "dependsOn": "C/C++: g++.exe build active file"
        }
    ]
}